<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <LinearLayout
        android:id="@+id/layout_non3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_select1"
        android:background="@color/blue_1">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="초기 설정"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/ridibatang"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:id="@+id/contour1"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginTop="15dp"
            android:background="@color/blue_1"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            tools:ignore="Suspicious0dp">
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_select1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layout_select2"
        app:layout_constraintTop_toBottomOf="@+id/layout_non3">

        <LinearLayout
            android:id="@+id/layout_select1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_marginStart="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/checkbox" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ridibatang"
                android:text="사용자의 소속학과를 선택해주세요."
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Spinner
                android:id="@+id/major_spinner1"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:spinnerMode="dropdown"
                android:backgroundTintMode="screen"
                android:backgroundTint="@color/blue_1"
                android:background="@drawable/square_item_spinner"/>

            <Spinner
                android:id="@+id/major_spinner2"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:spinnerMode="dropdown"
                android:backgroundTintMode="screen"
                android:backgroundTint="@color/blue_1"
                android:background="@drawable/square_item_spinner"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_select2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_select1"
        app:layout_constraintBottom_toTopOf="@id/layout_button1"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/layout_select_2_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_marginStart="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/checkbox" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ridibatang"
                android:text="수강 가능한 시간을 선택해주세요."
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/ridibatang"
            android:text="※ 선택한 시간 내의 과목만 검색됩니다."
            android:textColor="@color/grey_1"
            android:textSize="13sp"
            android:layout_marginBottom="10dp"/>

        <TableLayout
            android:id="@+id/layout_time_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:stretchColumns="*"
            android:background="@drawable/border">

            <TableRow
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/ridibatang"
                    android:text="시간"
                    android:textColor="@color/blue_1"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/ridibatang"
                    android:text="월"
                    android:textColor="@color/blue_1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/ridibatang"
                    android:text="화"
                    android:textColor="@color/blue_1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/ridibatang"
                    android:text="수"
                    android:textColor="@color/blue_1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/ridibatang"
                    android:text="목"
                    android:textColor="@color/blue_1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/ridibatang"
                    android:text="금"
                    android:textColor="@color/blue_1" />

            </TableRow>
            <TableRow
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            </TableRow>

            <TableRow
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_button1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="bottom|end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_select2">

        <ImageButton
            android:id="@+id/button_next"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/next" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>